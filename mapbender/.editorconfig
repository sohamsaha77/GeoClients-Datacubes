# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 4

[*.php]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 4

[*.sh]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.gitignore]
indent_size = 0
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true